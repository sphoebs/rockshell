<div class="popup-background settings-popup">
	<div class="popup-foreground popup-scrollable">
		<button class="img-btn close" id="close-popup"></button>
		<h3><%= strings.title %></h3>
		
		<form action="/settings" method="post">
		
			<div>
				<label class="form-label text-300 red-text"><%= strings.purpose %>: </label>
				<div class="form-input">
					<select name="purpose" required>
						<option value="dinner with tourists" <%= settings.purpose == 'dinner with tourists' ? 'selected' : '' %> > <%= strings.tourists %> </option>
						<option value="romantic dinner" <%= settings.purpose == 'romantic dinner' ? 'selected' : '' %> > <%= strings.partner %> </option>
						<option value="dinner with friends" <%= settings.purpose == 'dinner with friends' ? 'selected' : '' %> > <%= strings.friends %> </option>
						<option value="best price/quality ratio" <%= settings.purpose == 'best price/quality ratio' ? 'selected' : '' %> > <%= strings.price_quality %> </option>
					</select>
				</div>
			</div>
		
			<div>
				<label class="form-label text-300 red-text"><%= strings.max_distance %>: </label>
				<div class="form-input"><input type="number" name="max_distance"
					value="<%= settings.max_distance %>">
				</div>
			</div>
			
			<div>
				<label class="form-label text-300 red-text"><%= strings.num_places %>: </label>
				<div class="form-input"><input type="number" name="num_places"
					value="<%= settings.num_places %>">
				</div>
			</div>
			<input type="button" class="img-btn save text-100" value="<%= strings.save_reload %>" />
		</form>
	</div>
</div>