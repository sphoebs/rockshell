<div class="rest-item">
	<div class="rest-details">
		<div class="text-100 red-text name">
			<input class="my-input-text" type="text" id="rest-name" placeholder="Restaurant name"/>
		</div>
		<div class="text-100 red-text address" >
			<input class="my-input-text" type="text" name="auto-city" id="rest-address" >
			<input type="hidden" name="street_number" id="street_number" />
			<input type="hidden" name="route" id="route" />
			<input type="hidden" name="locality" id="locality" /> 
			<input type="hidden" name="administrative_area_level_2" id="administrative_area_level_2" /> 
			<input type="hidden" name="country" id="country"/>
			<input type="hidden" name="lat" id="lat"/>
			<input type="hidden" name="lon" id="lon"/>
		</div>
		<div class="text-100 red-text"> 
			<input class="my-input-text" type="text" id="rest-picture" placeholder="URL of restaurant picture">
			<img class="rest-image">
		</div>
	</div>
		<div class="rest-ratings">
			<div class="text-100 red-text">
				<small>For a dinner with visitors</small>
			</div>
			<div class="purpose-buttons">
				<img class="purpose-icon"
					src="/static/images/ratings/guest_selected.png">
				<button class="rating rating-btn noidea"
					 purpose="dinner with tourists"
					data-toggle="tooltip" data-placement="bottom"
					title="I have never been here for this purpose" value="0"></button>
				<button class="rating rating-btn bad"
					 purpose="dinner with tourists"
					data-toggle="tooltip" data-placement="bottom"
					title="I do not like it" value="1"></button>
				<button class="rating rating-btn neutral"
					 purpose="dinner with tourists"
					data-toggle="tooltip" data-placement="bottom"
					title="I am neutral" value="3"></button>
				<button class="rating rating-btn happy"
					 purpose="dinner with tourists"
					data-toggle="tooltip" data-placement="bottom" title="I like it"
					value="5"></button>
			</div>


			<small class="text-100 red-text">For a romantic dinner
				with the partner</small>
			<div class="purpose-buttons">
				<img class="purpose-icon"
					src="/static/images/ratings/romantic_selected.png">
				<button class="rating rating-btn noidea"
					 purpose="romantic dinner"
					data-toggle="tooltip" data-placement="bottom"
					title="I have never been here for this purpose" value="0"></button>
				<button class="rating rating-btn bad"
					 purpose="romantic dinner"
