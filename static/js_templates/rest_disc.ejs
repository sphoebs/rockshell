
<div class="info clickable" discount-id="<%= discount.key %>">
	<div class="text-center text-bold disc-title"><% if(lang == 'it'){%> <%=discount.title_it%> <%} else {%> <%=discount.title_en%> <% } %></div>

	<div class="text-center disc-desc"><% if(lang == 'it'){%> <%=discount.description_it%> <%} else {%> <%=discount.description_en%> <% } %></div>

	<div class="text-center disc-info">
		<%= discount.available_coupons %> <%= strings.coupons_available_till %> <span class="countdown" end-time="<%= discount.end_time %>"></span>
	</div> 
</div>
<div class="actions">
	<% if(!owner){ %>
		<% if(discount.coupons != undefined && discount.coupons.length > 0){ %>
			<% if(discount.coupons[0].deleted){ %>
				<button class="img-btn red-button disc-btn buy" discount-id="<%= discount.key %>"><%= strings.buy %></button>
			<% } else { %>
				<% if(discount.coupons[0].used){ %>
					<button class="img-btn red-button disc-btn see disabled" discount-id="<%= discount.key %>"><%= strings.see_used_coupon %></button>
				<% } else { %>
					<button class="img-btn red-button disc-btn see" discount-id="<%= discount.key %>"><%= strings.see_coupon %></button>
				<% } %>
				
			<% } %>
		
		<% } else if(available){ %>
			<button class="img-btn red-button disc-btn buy" discount-id="<%= discount.key %>"><%= strings.buy %></button>
		<% } %>
	<% } %>
	
</div>

	
		