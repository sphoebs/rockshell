<ul class="coupon-list">

	<% _.each(discounts, function(discount, i){ %>
		<li class="disc-item <% if(i%2 == 0){ %> even <% } else { %> odd <% } %>" >
			
				<div class="disc-left">
					<h4><% if(lang == 'it'){%> <%=discount.title_it%> <%} else {%> <%=discount.title_en%> <% } %> <span class="rest-link rest-clickable" rest-id="<%= discount.place%>" style="fonr-size: smaller;"> - <%= discount.place_name %></span></h4>
					<p><% if(lang == 'it'){%> <%=discount.description_it%> <%} else {%> <%=discount.description_en%> <%} %></p>
					<p><%= strings.last %> <%= discount.available_coupons %> 
					<% if(available){ %>
						<%= strings.coupons_available_till %> <span class="countdown" end-time="<%= discount.end_time %>"></span>
					<% } else { %>
						<%= strings.coupons_expired_at %> <span class="countdown" end-time="<%= discount.end_time %>"></span>
					<% } %>		
					</p>
				</div>
				
				<% _.each(discount.coupons, function(coupon){ %>
					<div class="coupon-item">
						<p> <%= strings.code %>: <%= coupon.code %></p>
						<p> <%= strings.status %>: <% if(coupon.deleted){ %> <%= strings.deleted %> <%} else if(coupon.used){ %> <%= strings.used %> <% } else { %> <%= strings.not_used %> <% } %> </p>
						<% if(!coupon.deleted && !coupon.used && available){ %>
							<button class="img-btn red-button use-button" discount-id="<%= discount.key %>" coupon-code="<%= coupon.code%>"><%= strings.use %></button>
							<button class="img-btn red-button delete-button"  discount-id="<%= discount.key %>" coupon-code="<%= coupon.code%>"><%= strings.delete %></button>
						<% } %>
					</div>
				<% }) %>
			
			<div class="clear-float"></div>
		</li>
	
	<% }) %>


</ul>
