
<ul class="">
	
	<% _.each(discounts, function(discount, i, discounts){ %>
		<li class="disc-item" >
		<div class="desc clickable" discount-id="<%= discount.key %>">
			<div class="text-bold disc-title"><% if(lang == 'it'){%> <%=discount.title_it%> <%} else {%> <%=discount.title_en%> <% } %></div>
			<div class="disc-desc text-margin"><% if(lang == 'it'){%> <%=discount.description_it%> <%} else {%> <%=discount.description_en%> <%} %></div>
			<div class="disc-time text-margin"> 
				<% if(available){ %>
					<%= strings.available_till %> <span class="countdown" end-time="<%= discount.end_time %>"></span>
				<% } else { %>
					<%= strings.expired_at %> <span class="countdown" end-time="<%= discount.end_time %>"></span>
				<% } %>		
			</div>
			<div class="coupon-num text-margin">
				<%= strings.coupons %>: <%= discount.available_coupons %>
			</div>
		</div>
			<div class="actions text-margin">
				<% if(owner){ %>
					<% if(actions){ %>
						<% if(available){ %>
							<button class="img-btn red-button edit" discount-id="<%= discount.key %>"><%= strings.edit %></button>
							<button class="img-btn red-button <% if(discount.published){ %> disabled <% } %> publish" discount-id="<%= discount.key %>"><%= strings.publish %></button>
							<button class="img-btn red-button <% if(discount.published){ %> disabled <% } %> delete" discount-id="<%= discount.key %>"><%= strings.delete %></button>
						<% } else { %>
							<button class="img-btn red-button new-similar" discount-id="<%= discount.key %>"><%= strings.new_similar %></button>
						<% } %>
						
					<% } %>
				<% } else { %>
					<% if(discount.coupons != undefined && discount.coupons.length > 0){ %>
						<button class="img-btn red-button see" discount-id="<%= discount.key %>"><%= strings.see_coupon %></button>
					<% } else if(available){ %>
						<button class="img-btn red-button buy" discount-id="<%= discount.key %>"><%= strings.buy %></button>
					<% } %>
				<% } %>
			</div>
			
			<div class="clear-float"></div>
				
		</li>
		<% if(i+1 < discounts.length){ %> 
			<li class="separator-border"></li>
		<% } %>
	
	<% }); %>


</ul>
